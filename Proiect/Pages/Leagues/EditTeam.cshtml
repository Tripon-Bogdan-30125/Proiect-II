@page
@model Proiect.Pages.Leagues.EditTeamModel
@{
}


<style>
	/* CSS Styles for the table */
	table {
		width: 100%;
		border-collapse: collapse;
	}

	th, td {
		padding: 10px;
		text-align: left;
		border-bottom: 1px solid #ccc;
	}

	th {
		background-color: #002366;
		color: #fff;
	}

	/* CSS Styles for the buttons */
	.btn {
		display: inline-block;
		padding: 8px 12px;
		text-decoration: none;
		font-weight: bold;
		border-radius: 4px;
	}

	.btn-primary {
		background-color: #002366;
		color: #fff;
	}

	.btn-danger {
		background-color: #dc3545;
		color: #fff;
	}

	.btn-light {
		background-color: #f8f9fa;
		color: #212529;
	}

	.btn-sm {
		font-size: 14px;
	}

	/* CSS Styles for the container */
	.container {
		max-width: 1200px; /* Adjust the max-width to make it bigger */
		margin: 0 auto;
		padding: 40px;
	}

	/* Additional CSS Styles */
	body {
		background-color: #f8f9fa;
		font-family: Arial, sans-serif;
	}

	h2 {
		color: #002366;
		margin-bottom: 20px;
	}
</style>

<h2>Edit Team</h2>
<h3>To use edit please login: </h3>

@if (Model.errorMessage.Length > 0)
{
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessage</strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
	</div>
}


@if (Model.errorMessage1.Length > 0)
{
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessage1</strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
	</div>
}


<form method="POST">

	<input type="hidden" name="id" value="@Model.info.id">



	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Username</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="Username" value="@Model.securityInfo.Username">
		</div>
	</div>



	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Password</label><br></br>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="Password" value="@Model.securityInfo.Password"><br></br>
		</div>
	</div>



	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Name</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="name" value="@Model.info.name">
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Team Value</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="teamValue" value="@Model.info.teamValue">
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Squad Size</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="squadSize" value="@Model.info.squadSize">
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Stadium</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="stadium" value="@Model.info.stadium">
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">City</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="city" value="@Model.info.city">
		</div>
	</div>





	@if (Model.succesMessage.Length > 0)
	{
		<div class="row mb-3">
			<div class="col-sm-9">
				<div class='alert alert-success alert-dismissible fade show' role='alert'>
					<strong>@Model.succesMessage</strong>
					<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
				</div>
			</div>
		</div>

	}




	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
		</div>
	</div>






</form>