@page
@model Proiect.Pages.Leagues.CreateTeamModel
@{
}

<h2> New Team</h2>


@if (Model.errorMessage.Length > 0)
{
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessage</strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
	</div>
}


<form method="POST">



	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Name</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="name" value="@Model.info.name">
		</div>
	</div>


	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Team Value</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="teamValue" value="@Model.info.teamValue">
		</div>
	</div>



	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Squad Size</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="squadSize" value="@Model.info.squadSize">
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Stadium</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="stadium" value="@Model.info.stadium">
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">City</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="city" value="@Model.info.city">
		</div>
	</div>


	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Id League</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="idLeague" value="@Model.info.idLeague">
		</div>
	</div>


	@if (Model.succesMessage.Length > 0)
	{
		<div class="row mb-3">
			<div class="col-sm-9">
				<div class='alert alert-success alert-dismissible fade show' role='alert'>
					<strong>@Model.succesMessage</strong>
					<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
				</div>
			</div>
		</div>

	}


	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
		</div>
	</div>

</form>

