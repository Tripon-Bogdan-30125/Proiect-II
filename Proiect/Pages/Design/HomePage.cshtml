    <script>
        // JavaScript for Slider
        const sliderInner = document.querySelector('.slider-inner');
        const sliderItems = document.querySelectorAll('.slider-item');
        const prevButton = document.querySelector('.prev-button');
        const nextButton = document.querySelector('.next-button');
        let currentIndex = 0;

        nextButton.addEventListener('click', () => {
            if (currentIndex < sliderItems.length - 1) {
                currentIndex++;
                sliderInner.style.transform = `translateX(-${currentIndex * 33.33}%)`;
            }
        });

        prevButton.addEventListener('click', () => {
            if (currentIndex > 0) {
                currentIndex--;
                sliderInner.style.transform = `translateX(-${currentIndex * 33.33}%)`;
            }
        });

        // JavaScript for Privacy Button
        const privacyButton = document.querySelector('.privacy-button');
        const privacyInfo = document.querySelector('.privacy-info');

        privacyButton.addEventListener('click', () => {
            privacyInfo.style.display = privacyInfo.style.display === 'none' ? 'block' : 'none';
        });
    </script>
</body>
